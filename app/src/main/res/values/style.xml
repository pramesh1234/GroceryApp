<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView.Base" parent="android:Widget.TextView">
        <!--        <item name="android:fontFamily">sans-serif</item>-->
    </style>
    <!-- Headline6 -> 20sp -->
    <style name="TextView.Headline6" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="autoSizeMinTextSize">16sp</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1dp</item>
    </style>


    <!-- Body1 -> 16sp -->
    <style name="TextView.Body1" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1dp</item>
    </style>

    <!-- Body2 -> 14sp -->
    <style name="TextView.Body2" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1dp</item>
    </style>



    <!-- Caption -> 12sp -->
    <style name="TextView.Caption" parent="TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="autoSizeMinTextSize">9sp</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1dp</item>
    </style>

    <style name="TextView.Caption.Black" parent="TextView.Caption">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextView.Headline6.Black" parent="TextView.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextView.Body2.Black" parent="TextView.Body2">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>